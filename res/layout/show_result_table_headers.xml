<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
   
    	
   
  
       
        <!-- WIRE mm -->
	
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView
                style="@style/headerColumn.tableHeader"
                android:text="Diameter"
                />
             
        <TextView
                style="@style/headerColumn.tableUOM"
                android:text="mm"
                />
        
                    
     	</LinearLayout>
       
        
        <!-- REDUCTION -->
        
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView
                android:text = "Reduction"
                style="@style/headerColumn.tableHeader"
                />
             
        <TextView
                style="@style/headerColumn.tableUOM"
                android:text="%"
                />
        
        
     	</LinearLayout>
        
		<!-- TOTAL REDUCTION -->
        
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView
                android:text = "Total Reduction"
                style="@style/headerColumn.tableHeader"
                />
        
        <TextView
                style="@style/headerColumn.tableUOM"
                />
        
     	</LinearLayout>
        
        
        <!-- Speed -->
        
	    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

	    <TextView
                android:text = "Speed"
                style="@style/headerColumn.tableHeader"
                />
             
        <TextView
                style="@style/headerColumn.tableUOM"
                android:text="m/s"
                
                />
        
     	</LinearLayout>
       
	    <!-- Tensile Strength -->
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView
                android:text="Tensile Strength"
                style="@style/headerColumn.tableHeader"
                />
             
        <TextView
                style="@style/headerColumn.tableUOM"
                android:text="N/mm2"
                />
        
     	</LinearLayout>

        <!-- Pull -->
        
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView
                android:text = "Pull"
                style="@style/headerColumn.tableHeader"
                />
             
        <TextView
                style="@style/headerColumn.tableUOM"
                android:text="kg"
                />
        
     	</LinearLayout>
        
        <!-- Power -->
        
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
                android:text = "Power"
                style="@style/headerColumn.tableHeader"
                
                />
             
        <TextView
                style="@style/headerColumn.tableUOM"
                android:text="kW"
                />
        
     	</LinearLayout>
    
    
</TableRow>
