<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:useDefaultMargins="true"
        android:layout_margin="3dp"
        app:columnCount="4"
        app:rowCount="7"
        android:layout_gravity="center_horizontal">
        
            <TextView
                app:layout_columnSpan = "3"
                app:layout_gravity = "fill_horizontal"
                app:layout_row = "0"
                android:text = "@string/dieschedule" 
                android:textStyle = "bold"
                android:textSize = "25sp"
                android:gravity = "center"
                android:layout_margin = "5dp"
                
                />
        
          <TextView
                app:layout_column="0"
                app:layout_row="1"
                style="@style/inputLabel"
                android:text="@string/inlet"
                app:layout_gravity="fill"
                
                />

            <EditText
                app:layout_column="1"
                app:layout_row="1"
                android:id="@+id/txtinlet"
                app:layout_gravity="fill_horizontal"
                android:inputType="numberDecimal"
                android:text="1"
                style="@style/inputNumbers"
                />

            <TextView
                app:layout_column="2"
                app:layout_row="1"
                style="@style/measure"
                android:text="mm" 
                app:layout_gravity="fill"
                />

            <TextView
                app:layout_column="0"
                app:layout_row="2"
                style="@style/inputLabel"
                android:text="@string/outlet"
                 app:layout_gravity="fill"
                />

            <EditText
                app:layout_column="1"
                app:layout_row="2"
                app:layout_gravity="fill_horizontal"
                android:id="@+id/txtoutlet"
                android:inputType="numberDecimal"
                style="@style/inputNumbers" 
                android:text="1"
                />

            <TextView
                app:layout_column="2"
                app:layout_row="2"
                style="@style/measure"
                android:text="mm"
                app:layout_gravity="fill"/>

            <TextView
                style="@style/inputLabel"
                app:layout_column="0"
                app:layout_row="3"
                android:text="@string/n_of_dies" 
                 app:layout_gravity="fill_vertical|fill_horizontal"
                />

            <Spinner
                app:layout_column="1"
                app:layout_row="3"
                android:id="@+id/n_of_dies"
                style="@style/inputNumbers"
                app:layout_gravity="fill_horizontal"
                />

            <TextView
                app:layout_column="2"
                app:layout_row="3"
                style="@style/measure"
                android:text="NÂ°"
                app:layout_gravity="fill_vertical|fill_horizontal"
                 />

           <TextView
               style="@style/inputLabel"
               app:layout_column="0"
               app:layout_row="4"
               app:layout_gravity="fill_vertical|fill_horizontal"
               android:text="@string/carbon_content" />
           
            <Spinner
                app:layout_column="1"
                app:layout_row="4"
                app:layout_gravity="fill_horizontal"
                android:id="@+id/carbon_content"
                style="@style/inputNumbers" 
                android:layout_width="wrap_content"
                />

            <TextView
                app:layout_column="2"
                app:layout_row="4"
                style="@style/measure"
                android:text="#" 
                app:layout_gravity="fill_vertical|fill_horizontal"
                />


            <TextView
                app:layout_column="0"
                app:layout_row="5"
                style="@style/inputLabel"
                android:text="@string/target_speed"
                app:layout_gravity="fill_vertical|fill_horizontal" 
               />

            <EditText
                app:layout_column="1"
                app:layout_row="5"
                app:layout_gravity="fill_horizontal"
                android:id="@+id/txttargetspeed"
                android:inputType="numberDecimal"
                android:text="1"
                style="@style/inputNumbers" />

            <TextView
                app:layout_column="2"
                app:layout_row="5"
                style="@style/measure"
                android:text="m/s" 
                app:layout_gravity="fill_vertical|fill_horizontal"
                />

            <android.support.v7.widget.Space
               app:layout_column="3"
               app:layout_row="0"
               app:layout_rowSpan="6"
               app:layout_gravity="fill"
               />

           <Button
                    app:layout_column="1"
                    app:layout_row="6"
                    android:id="@+id/btnSubmit"
                    android:ems="5"
                    app:layout_gravity="fill_horizontal"
                    android:text="@string/confirm" />


</android.support.v7.widget.GridLayout>