<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="inputNumbers">
       
       <item name="android:layout_height">40dp</item>
       <item name="android:layout_width">200dp</item>
       <item name="android:gravity">center</item>
       
       
    </style>
    
    <style name="inputLabel" >
         <item name="android:background">@color/Blue</item>
        <item name="android:gravity">left|center_vertical</item> 
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item> 
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="confirmValue" parent="inputLabel">
        
    </style>
    
     <style name="measure">
        <item name="android:background">@color/Blue</item>
        <item name="android:gravity">left|center_vertical</item> 
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item> 
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
     
     <!-- TABLE LAYOUT STYLES -->
     
     <style name="headerColumn">
         <item name="android:width">100dp</item>
     </style>
     
     <style name="headerColumn.tableHeader">
         <item name="android:gravity">center</item>
     </style>
     
     <style name="headerColumn.tableHeader.headerDoubleColumn">
         <item name="android:width">200dp</item>
     </style>
             
     <style name="headerColumn.tableUOM">
         <item name="android:gravity">center</item>
     </style>
     
     <style name="headerColumn.tableAboveValue">
         <item name="android:gravity">center</item>
     </style>
     
     
     
</resources>