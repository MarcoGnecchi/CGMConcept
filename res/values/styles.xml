<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="inputNumbers">
       <item name="android:layout_height">40dp</item>
       <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="inputLabel">
    </style>
    
    <style name="confirmValue">
        <item name="android:padding">5dp</item>
         <item name="android:gravity">center</item>
    </style>
    
     <style name="measure">
         <item name="android:padding">5dp</item>
         <item name="android:gravity">center</item>
    </style>
    
     
     <!-- TABLE LAYOUT STYLES -->
     
     <style name="headerColumn">
         <item name="android:width">100dp</item>
     </style>
     
     <style name="headerColumn.tableHeader">
         <item name="android:gravity">center</item>
     </style>
     
     <style name="headerColumn.tableHeader.headerDoubleColumn">
         <item name="android:width">200dp</item>
     </style>
             
     <style name="headerColumn.tableUOM">
         <item name="android:gravity">center</item>
     </style>
     
     <style name="headerColumn.tableAboveValue">
         <item name="android:gravity">center</item>
     </style>
     
     
     
</resources>