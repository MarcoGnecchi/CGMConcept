<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>
    
    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/GreyDark</item>
    </style>
    
     <style name="form_layout">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="inputLabel"  parent="@android:style/TextAppearance.Small">
        <item name="android:background">@color/Grey1</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_weight">1</item>
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
    </style>
    
    <style name="inputNumbers" parent="@android:style/TextAppearance.Large">
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:layout_weight">1</item>
       <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
         <item name="android:layout_margin">5dp</item>
         <item name="android:padding">5dp</item>
    </style>
    
     <style name="measure" parent="@android:style/TextAppearance.Small">
         <item name="android:gravity">left|center_vertical</item>
         <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:background">@color/Grey2</item>
         <item name="android:layout_margin">5dp</item>
         <item name="android:padding">5dp</item>
    </style>
    
     
      <style name="leftColumnLayout" >
         <item name="android:background">@color/Grey1</item>
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         
    </style>
    <style name="confirmValue" parent="inputLabel">
        
    </style>
    
     
     <!-- TABLE LAYOUT STYLES -->
     
     <style name="headerColumn">
         <item name="android:minWidth">80dp</item>
         <item name="android:padding">2dp</item>
         <item name="android:layout_width">wrap_content</item>
         <item name="android:minHeight">30dp</item>
         <item name="android:textSize">16sp</item>
         <item name="android:textColor">@color/Black</item>
     </style>
     
     <style name="headerColumn.tableHeader" >
         <item name="android:textSize">18sp</item>
         <item name="android:gravity">center</item>
         <item name="android:background">@color/Red</item>
         <item name="android:textColor">@color/White</item>
     	 <item name="android:layout_width">wrap_content</item>	
     	 <item name="android:layout_height">wrap_content</item>
     	 <item name="android:layout_marginLeft">1dp</item>
     </style>
     
      <style name="headerColumn.tableHeader.headerDoubleColumn">
         <item name="android:width">200dp</item>
     </style>
     
     <style name="headerColumn.tableUOM">
          <item name="android:background">@color/Red</item>
         <item name="android:textColor">@color/Grey3</item>
         <item name="android:gravity">center</item>
          <item name="android:textSize">16sp</item>
           <item name="android:layout_width">match_parent</item>	
     	 <item name="android:layout_height">wrap_content</item>
     	  <item name="android:layout_marginLeft">1dp</item>
     </style>
     
     <style name="headerColumn.tableAboveValue">
          <item name="android:background">@color/Red</item>
         <item name="android:textColor">@color/White</item>
         <item name="android:gravity">center</item>
          <item name="android:layout_width">wrap_content</item>	
     	 <item name="android:layout_height">wrap_content</item>
     </style>
     
     
     
</resources>